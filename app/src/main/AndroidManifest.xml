<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.morfans.chenjunyu19.mediavolume">

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <service
            android:name=".MediaMuteService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_volume_off"
            android:label="@string/media_mute"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".Media1Service"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_volume_down"
            android:label="@string/media_1"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".Media2Service"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_volume_up"
            android:label="@string/media_2"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".MediaFullService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_volume_up"
            android:label="@string/media_full"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>